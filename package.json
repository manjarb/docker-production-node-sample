{
  "name": "docker-production-node-sample",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "local": "SET NODE_ENV=development & nodemon --exec babel-node ./index.js",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run local\" \"npm run client\"",
    "install:client": "npm install --prefix client",
    "sass:rebuild:client": "npm uninstall --save node-sass --prefix client && npm cache clean --force --prefix client && npm install --save node-sass --prefix client && npm rebuild node-sass --force --prefix client",
    "pull-and-build": "git pull && npm install && npm install --prefix client && npm run build --prefix client",
    "client-build": "npm run build --prefix client",
    "prod": "pm2-runtime start pm2.json --env prod",
    "prod-background": "pm2 start pm2.json --env prod",
    "restart-prod": "pm2-runtime restart pm2.json --env prod",
    "restart-prod-background": "pm2 restart pm2.json --env prod",
    "=====": "=====================================================",
    "compose:up": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "compose:up:build": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "compose:up:build:force": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build --force-recreate",
    "compose:up:build:background": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build",
    "compose:down": "docker-compose down -v",
    "=====2": "=====================================================",
    "prod:compose:up:build": "NODE_ENV=production docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
    "=====3": "=====================================================",
    "container:del:all": "docker rm -vf $(docker ps -a -q)",
    "image:del:all": "docker image prune -a",
    "shell:web": "docker exec -it node-web /bin/bash"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.0",
    "cookie-session": "^1.3.3",
    "es6-promisify": "^6.0.1",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "faker": "^4.1.0",
    "mongoose": "^5.6.0",
    "nodemon": "^1.19.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "eslint-plugin-node": "^9.1.0"
  }
}
